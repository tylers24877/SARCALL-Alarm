<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadeScrollbars="false"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="32.0dip">

        <TextView
            android:id="@+id/respond_dialog_sign_on_off_multiple_teams_instructions"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="32.0dip"
            android:layout_marginTop="37.0dip"
            android:layout_marginEnd="32.0dip"
            android:text="Please select a team."
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/respond_dialog_sign_on_off_multiple_teams_spinner"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="32.0dip"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32.0dip"
            android:singleLine="false"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/respond_dialog_sign_on_off_multiple_teams_instructions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/respond_dialog_sign_on_off_multiple_teams_select_button"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="50.0dip"
            android:layout_marginTop="37.0dip"
            android:layout_marginEnd="50.0dip"
            android:text="Select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/respond_dialog_sign_on_off_multiple_teams_spinner" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>